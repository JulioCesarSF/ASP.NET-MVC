@model Bidme.MVC.Web.ViewModels.UsuarioViewModel
@{
    ViewBag.Title = "Registrar";
}

@HelperLayout.Titulo("Novo usuário")

@HelperLayout.SubTitulo("Informações para cadastro")

@Html.ValidationSummary()

<div class="row">
    <div class="col-md-12 col-sm-12">
        @using (Html.BeginForm())
        {

            <div class="col-md-4 col-sm-4">
                <div class="panel panel-default">
                    <div class="panel-heading">Informações Pessoais</div>
                    <div class="panel-body">
                        <div class="form-group">
                            @Html.LabelFor(u => u.Pessoa.Nome)
                            @Html.TextBoxFor(u => u.Pessoa.Nome, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(u => u.Pessoa.Cpf)
                            @Html.TextBoxFor(u => u.Pessoa.Cpf, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(u => u.Pessoa.DataNascimento)
                            @Html.TextBoxFor(u => u.Pessoa.DataNascimento, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(u => u.Pessoa.Telefone)
                            @Html.TextBoxFor(u => u.Pessoa.Telefone, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
            //informacoes de endereço
            <div class="col-md-4 col-sm-4">
                <div class="panel panel-default">
                    <div class="panel-heading">Endereço</div>
                    <div class="panel-body">
                        <div class="form-group">
                            @Html.LabelFor(u => u.Pessoa.Cep)
                            @Html.TextBoxFor(u => u.Pessoa.Cep, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(u => u.Pessoa.Numero)
                            @Html.TextBoxFor(u => u.Pessoa.Numero, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(u => u.Pessoa.Complemento)
                            @Html.TextBoxFor(u => u.Pessoa.Complemento, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @*Adicionar campos para logradouro, cidade, estado*@
                        </div>
                    </div>
                </div>
            </div>
            //informacoes do usuario
            <div class="col-md-4 col-sm-4">
                <div class="panel panel-default">
                    <div class="panel-heading">Informações de Usuário</div>
                    <div class="panel-body">
                        <div class="form-group">
                            @Html.LabelFor(u => u.User.Email)
                            @Html.TextBoxFor(u => u.User.Email, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(u => u.User.Password)
                            @Html.TextBoxFor(u => u.User.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="form-group">
                            <input type="submit" class="btn btn-success" value="Enviar" />
                            <input type="reset" class="btn btn-danger" value="Limpar" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>



