@model List<Bidme.Dominio.Models.Produto>

@foreach (var item in Model)
{
    <tr>
        <td>@item.Id</td>
        <td><img src="@item.Imagem" alt="@item.Nome" width="50" height="50" /></td>
        <td>@item.Nome</td>
        <td>@item.Descricao</td>
        <td>@item.Valor</td>
        <td>
            <button onclick="Id.value=@item.Id" type="button" class="btn btn-success btn-sm" data-toggle="modal"
                    data-target="#modalVender">
                Vender
            </button>
        </td>
    </tr>
}
