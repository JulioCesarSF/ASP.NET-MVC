@model Leilao.MVC.Web.ViewModels.UsuarioViewModel
@{
    ViewBag.Title = "Comprar";
}

@HelperLayout.Titulo("Produtos Disponíveis no Site para Compra")

@HelperLayout.SubTitulo("Produtos")

<div class="row">
    <div class="col-md-12 col-sm-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Produto</th>                    
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                @Html.Partial("_tabelaProdutosDisponiveis", Model.Negociacoes)
            </tbody>
        </table>
    </div>
</div>

<!--Modal -->
<div class="modal fade" id="ModalComprar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Cadastrar Produto</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Dashboard", "Comprar", FormMethod.Post, new { @class = "form-inline" }))
                {
                    <div class="form-group">
                        @*@Html.TextBoxFor(p => p.Valor_Produto, new { @class = "form-control", placeholder = "Oferta" })*@

                    </div>
                    <input type="hidden" name="idNegociacao" id="idNegociacao" />

                    <input type="submit" class="btn btn-success btn-sm" value="Comprar"/>

                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                }
            </div>
        </div>
    </div>
</div>



