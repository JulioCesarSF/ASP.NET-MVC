@model Leilao.MVC.Web.ViewModels.NegociacaoViewModel
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Comprar";
}

@HelperLayout.Titulo("Produtos Disponíveis no Site para Compra")

@HelperLayout.SubTitulo("Produtos")

<div class="row">
    <div class="col-md-12 col-sm-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Produto</th>                    
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                @Html.Partial("_tabelaProdutosDisponiveis", Model.Negociacoes)
            </tbody>
        </table>
    </div>
</div>

<!--Modal -->
<div class="modal fade" id="ModalComprar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Proposta de Compra</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Comprar", "Compra", FormMethod.Post, new { @class = "form-inline" }))
                {
                    <input type="hidden" name="Id" id="Id" />
                    @Html.HiddenFor(n => n.IdUser, new { @Value = User.Identity.GetUserId() })
                    @Html.HiddenFor(n => n.Status, new { @Value = "Em andamento" })  
                    <div class="form-group">
                        @Html.Label("Valor do Produto")
                        @Html.TextBoxFor(n => n.Produto.Valor, new { @class="form-control", disabled="disabled" })
                    </div>                                    
                    <div class="form-group">
                        @Html.Label("Sua Oferta")
                        @Html.TextBoxFor(n=>n.Valor, new { @class="form-control" })
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-success btn-sm" value="Comprar" />
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>



