@model Leilao.MVC.Web.ViewModels.PainelViewModel
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Painel";
}

@*Model.IdUser*@

@HelperLayout.Titulo("Painel do " + Model.Usuario.Pessoa.Nome)

<div class="row">
    <div class="col-md-12 col-sm-12">
        <p>Menu do Usuário</p>
        @Html.ActionLink("Vender", "Vender", "Venda", new { idUser = User.Identity.GetUserId() }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Comprar", "Comprar", "Compra", new { idUser = User.Identity.GetUserId() }, new { @class = "btn btn-primary" })
    </div>
</div>

@HelperLayout.SubTitulo("Produtos que você está vendendo")

@*Tabela de Vendas*@

<div class="row">
    <div class="col-md-12 col-sm-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id Negociação</th>
                    <th>Nome do Produto</th>
                    <th>Imagem</th>
                    <th>Valor Negociação</th>
                    <th>Status</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                @Html.Partial("_tabelaVendas", Model.NegociacoesVenda)
            </tbody>
        </table>
    </div>
</div>

@HelperLayout.SubTitulo("Produto que você está comprando")

@*Tabela de Compras*@
<div class="row">
    <div class="col-md-12 col-sm-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id Negociação</th>
                    <th>Nome do Produto</th>
                    <th>Imagem</th>
                    <th>Valor Negociação</th>
                    <th>Valor Original</th>
                    <th>Status</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                @Html.Partial("_tabelaCompras", Model.NegociacoesCompra)
            </tbody>
        </table>
    </div>
</div>

<!--Modal de aceite de proposta da venda -->
<div class="modal fade" id="propostaModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Proposta</h4>
            </div>
            @using (Html.BeginForm("Proposta", "Venda"))
            {
                <input type="hidden" id="Id" name="Id" /> //id da negociacao
                <div class="modal-body">
                    <div class="form-group">
                        @Html.Label("Valor Original")
                        <input type="text" id="ValorOriginal" disabled="disabled" class="form-control" />
                    </div>
                    <div class="form-group">
                        @Html.Label("Valor da Proposta")
                        <input type="text" id="ValorDaProposta" disabled="disabled" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btnAceitar" onclick="aceitarProposta()" class="btn btn-success btn-sm">Aceitar</button>
                    <button id="btnRecusar" onclick="recusarProposta()" class="btn btn-warning btn-sm">Recusar</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Sair</button>
                </div>
            }
        </div>
    </div>
</div>

