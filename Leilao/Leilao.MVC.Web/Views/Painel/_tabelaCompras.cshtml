@model List<Leilao.Dominio.Models.Negociacao>

@foreach (var item in Model)
{
    <tr>
        <td>@item.Id</td>
        <td>@item.Produto.Nome</td>
        <td>
            <img src=@item.Produto.Imagem alt=@item.Produto.Nome width="50" height="50">
        </td>
        <td>@item.Valor</td>
        <td>@item.Produto.Valor</td>
        <td>@item.Status</td>   
        <td>
            @if (item.Status == "Vendido")
            {
                <a href="https://pagseguro.uol.com.br/integracao/botoes_de_pagamento.jhtml#comprar" class="btn btn-success">Finalizar Compra</a>
            }
            else
            {
                @item.Status
            }
        </td>
    </tr>
}

