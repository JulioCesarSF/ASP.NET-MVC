@model List<Leilao.Dominio.Models.Negociacao>

@foreach (var item in Model)
{
    <tr>
        <td>@item.Id</td>
        <td>@item.Produto.Nome</td>
        <td>
            <img src=@item.Produto.Imagem alt=@item.Produto.Nome width="50" height="50">
        </td>
        <td>@item.Valor</td>   
        <td>@item.Status</td>       
        <td>
            @if (item.Status == "Em andamento")
            {
                <button onclick="proposta.innerHTML='A proposta foi de: R$'+@item.Produto.Valor ,negociacaoId.value = @item.Id ,negociacao2Id.value = @item.Id" type="button" class="btn btn-warning" data-toggle="modal" data-target="#myModal">
                    Ver Proposta
                </button>
            }else
            {
               
            }
        </td>

    </tr>
}