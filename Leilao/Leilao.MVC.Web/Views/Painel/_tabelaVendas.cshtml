@model List<Leilao.Dominio.Models.Negociacao>

@foreach (var item in Model)
{
    <tr>
        <td>@item.Id</td>
        <td>@item.Produto.Nome</td>
        <td>
            <img src=@item.Produto.Imagem alt=@item.Produto.Nome width="50" height="50">
        </td>
        <td>@item.Valor</td>   
        <td>@item.Status</td>       
        <td>
            @if (item.Status.Equals("Em andamento"))
            {
                <button onclick="setValues(@item.Id, @item.Produto.Valor, @item.Valor.ToString().Replace(",", "."))" class="btn btn-primary" data-toggle="modal" data-target="#propostaModal">Opções</button>
            }else
            {
                @: -
            }
        </td>

    </tr>
}

 <script>    
    function setValues(id, valorOriginal, valorDaProposta) {
        console.log("id " + id + " valorOriginal " + valorOriginal + " valorDaProposta " + valorDaProposta);
        $("Id").val(id);
        $("ValorOriginal").val(valorOriginal);
        $("ValorDaProposta").val(valorDaProposta);
    }   
</script>  

