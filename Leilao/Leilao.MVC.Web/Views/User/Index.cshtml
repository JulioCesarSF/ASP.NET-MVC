@model Leilao.MVC.Web.ViewModels.PessoaViewModel
@{
    ViewBag.Title = "Painel";
}

@HelperLayout.Titulo("Página Principal")

@if (User.Identity.IsAuthenticated && !Model.IdUser.Equals("0"))
{
    @HelperLayout.SubTitulo("Bem Vindo! " + Model.Nome)
    @Html.ActionLink("Painel do Usuário", "Index", "Painel", new { idUser = Model.IdUser }, new { @class = "btn btn-primary" })
}
else
{
    <script>
        document.getElementById('logoutForm').submit();
    </script>
}


