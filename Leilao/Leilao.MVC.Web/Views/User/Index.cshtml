@model Leilao.MVC.Web.ViewModels.PessoaViewModel
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Painel";
}

@HelperLayout.Titulo("Página Principal")

@if (User.Identity.IsAuthenticated)
{
    @*Mostrar o Nome pessoal do usuário logado e não seu Username*@
    @HelperLayout.SubTitulo("Bem Vindo! " + Model.Nome)
    @Html.ActionLink("Painel do Usuário", "Index", "Painel", new { idUser = User.Identity.GetUserId() }, new { @class = "btn btn-primary" })
}
else
{
    <script>
        document.getElementById('logoutForm').submit();
    </script>
}


